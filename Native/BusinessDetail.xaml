<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mods.native"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1366">
    <Grid Background="#4C000000">
        <StackPanel Orientation ="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid Width="300" Height="500" Background="#4C000000">
            </Grid>
            <StackPanel Orientation ="Vertical" Width="200" Background="#4C000000" Margin="2,0,0,0">
                <Button Content ="--" Height="35"/>
            </StackPanel>
            <Button Content ="X" Command="{Binding CmdClose}" VerticalAlignment="Top" HorizontalAlignment="Right" Width="30" Height="30"/>
        </StackPanel>
    </Grid>
</UserControl>
