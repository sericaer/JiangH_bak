<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:noesis="clr-namespace:NoesisGUIExtensions;assembly=Noesis.GUI.Extensions"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1366">
    <Grid Background="#47000000">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <ListView Name ="BusinessTab" ItemsSource="{Binding Path=businesses}" Margin="0" Background="#4C000000" HorizontalContentAlignment="Stretch" HorizontalAlignment="Center" Width="800">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="name" DisplayMemberBinding="{Binding name}"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button Content="X" Command="{Binding ClickCloseCommand}" VerticalAlignment="Top" Margin="1,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
