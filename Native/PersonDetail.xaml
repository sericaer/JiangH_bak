<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mods.native"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1366">
    <Grid Background="#4C000000">
        <TabControl HorizontalAlignment="Center" Height="500" Margin="0" Width="800" VerticalAlignment="Center">
            <TabItem Header="BaseInfo">
            </TabItem>
            <TabItem Header="Business">
                <Grid>
                    <ListView Name ="BusinessTab" ItemsSource="{Binding Path=person.businesses}" Margin="0" Background="#4C000000" HorizontalContentAlignment="Stretch">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="name" DisplayMemberBinding="{Binding name}" Width="160"/>
                                <GridViewColumn Header="owner" DisplayMemberBinding="{Binding owner.name}"  Width="160"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                 </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
